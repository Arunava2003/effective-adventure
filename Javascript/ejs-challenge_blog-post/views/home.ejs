<%- include("partials/header.ejs"); -%> 

<h1>Home</h1>
<p><%= homeStartingContent %> </p>
    <% posts.forEach(function (post){ %>
        <h1><%= truncate(post.title) %> </h1>
        <p><%= truncate(post.content) %> <a href="/posts/<%=post.title%>" target="_blank" rel="noopener noreferrer">Read more</a> </p>        
    <% }); %> 
    <% function truncate(str) { %>  
        <% if (str.length <= 100) { %> 
            <% return str; %> 
        <% } %>      
    <% return str.slice(0, 100)+ "..."; %>  
    <% } %> 

